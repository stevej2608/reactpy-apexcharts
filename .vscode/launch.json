{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    // https://stackoverflow.com/a/65292380/489239
    {
      "name": "2a. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "-sv",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "2b. PyTest (test_login_form.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_login_form.py",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "2c. PyTest (test_complex_form.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_complex_form.py",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "2c. PyTest (props.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_props.py"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
    {
      "name": "3.a Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://vscode-dev:82",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      // Chrome debugger address:
      // http://vscode-dev:82/_reactpy/js/src/index.js
      //
      // js/src/index.js
      "sourceMapPathOverrides": {
        "/_reactpy/*": "${workspaceFolder}/*",
        "\\workspace\\reactpy-dashboard\\_reactpy\\js\\src\\*": "${workspaceFolder}/js/src/*",
        "/workspace/reactpy-dashboard/_reactpy/js/src/*": "${workspaceFolder}/js/src/*"
      },
      "internalConsoleOptions": "openOnSessionStart",
    },
  ]
}